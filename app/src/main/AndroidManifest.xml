<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lobxy.achs">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".User.FeedbackActivity"></activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppFullScreenTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/AppFullScreenTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".User.UserMainScreenActivity" />
        <activity
            android:name=".User.ComplainFormActivity"
            android:label="Complaint Form"
            android:windowSoftInputMode="adjustPan|stateHidden|adjustResize" />
        <activity
            android:name=".User.UserComplainActivity"
            android:label="My Complaints" />
        <activity
            android:name=".User.ProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".User.ComplainTypesActivity"
            android:label="Types" />
        <activity android:name=".Admin.AdminMainScreen" />
        <activity
            android:name=".Admin.FragmentsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".Admin.AddSupervisorActivity" />
        <activity android:name=".Admin.ListSupervisorActivity" />
        <activity
            android:name=".Supervisor.SupervisorDetail"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Supervisor.SupervisorMain" />
    </application>

</manifest>